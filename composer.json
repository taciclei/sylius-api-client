{
    "name": "friendsofapi/sylius-api-client",
    "description": "A client for Sylius APIs",
    "license": "MIT",
    "keywords": ["api", "sylius"],
    "authors": [
        {
            "name": "Tobias Nyholm",
            "email": "tobias.nyholm@gmail.com"
        },
        {
            "name": "Márk Sági-Kazár",
            "email": "mark.sagikazar@gmail.com"
        },
        {
            "name": "Kasim Taskin",
            "email": "taskinkasim@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "php-http/httplug": "^1.0 || ^2.0",
        "php-http/multipart-stream-builder": "^1.0",
        "php-http/client-common": "^2.0",
        "php-http/discovery": "^1.0",
        "php-http/message-factory": "^1.0",
        "php-http/curl-client": "^2.0",
        "php-http/message": "^1.0",
        "nyholm/nsa": "^1.1",
        "nyholm/psr7": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^5.3",
        "sylius-labs/coding-standard": "^4.1",
        "php-vcr/php-vcr": "^1.5",
        "mikey179/vfsstream": "^1.6",
        "php-vcr/phpunit-testlistener-vcr": "^3.2",
        "guzzlehttp/guzzle": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "FAPI\\Sylius\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:ci": "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.xml",
        "ecs:fixer": "vendor/bin/ecs check src tests",
        "ecs:fixer:fix": "vendor/bin/ecs check src tests --fix"
    }
}
